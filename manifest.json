{
  "manifest_version": 3,
  "name": "ReadQuest",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "public/assets/icon-16.png",
    "48": "public/assets/icon-48.png",
    "128": "public/assets/icon-128.png"
  },
  "action": {
    "default_popup": "./public/index.html",
    "default_icon": {
      "16": "public/assets/icon-16.png",
      "48": "public/assets/icon-48.png",
      "128": "public/assets/icon-128.png"
    }
  }
}